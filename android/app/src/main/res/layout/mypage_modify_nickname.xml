<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임 변경"
            android:fontFamily="@font/nanum_bold"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:backgroundTint="#F5F5F5"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_close_nickname"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="닫기"
            android:textColor="@color/main_color_green"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nanum_regular"
            android:textSize="15dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/edit_name_new"
            style="@style/editText_style"
            android:layout_width="257dp"
            android:layout_gravity="center"
            android:hint="새 닉네임 입력"
            android:inputType="text" />

        <Button
            android:id="@+id/btnNicknameCheck"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BFBFBF"
            android:fontFamily="@font/nanum_regular"
            android:text="인증"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="12dp" />
    </LinearLayout>


    <Button
        android:id="@+id/changeNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="변경"
        android:backgroundTint="@color/main_color_green"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>

</LinearLayout>
