<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/start_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:fontFamily="@font/nanum_bold"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:backgroundTint="#F5F5F5"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_close_nickname"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            android:text="닫기"
            android:textColor="@color/main_color_green"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nanum_regular"
            android:textSize="15dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBaseline="@+id/start_bar"/>

    <RelativeLayout
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/cc_edit_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_toStartOf="@id/send_comment"
            android:background="@drawable/border_edit_community"
            android:fontFamily="@font/nanum_regular"
            android:hint="댓글을 입력하세요"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="@dimen/community_small_text" />

        <ImageView
            android:id="@+id/send_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/community_send" />

    </RelativeLayout>

</RelativeLayout>
