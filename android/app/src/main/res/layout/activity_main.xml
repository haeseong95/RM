<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main_color_green"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="Recycle Mate"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/nanum_regular"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btnManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자 페이지"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanum_bold"
            android:visibility="gone"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/li_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/border_camera">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/nanum_regular"
                        android:paddingLeft="15dp"
                        android:paddingTop="13dp"
                        android:paddingRight="100dp"
                        android:text="검색어를 입력하세요"
                        android:textColor="#A0A0A0"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/search_icon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border_camera"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/main_camera"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/nanum_regular"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/relativee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11">
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/main_map"
                style="@style/toolbar_icon"
                android:drawableTop="@drawable/main_map"
                android:fontFamily="@font/nanum_regular"
                android:text="분리수거장"
                android:layout_weight="1" />
            <Button
                android:id="@+id/main_community"
                style="@style/toolbar_icon"
                android:fontFamily="@font/nanum_regular"
                android:drawableTop="@drawable/main_community"
                android:text="커뮤니티"
                android:layout_weight="1" />
            <Button
                android:id="@+id/main_userinfo"
                style="@style/toolbar_icon"
                android:fontFamily="@font/nanum_regular"
                android:drawableTop="@drawable/main_profile"
                android:text="로그인"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>