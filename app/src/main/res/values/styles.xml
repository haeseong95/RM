<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--카테고리 버튼 레이아웃-->
    <style name="category_layout">
        <item name="android:layout_width">210sp</item>
        <item name="android:layout_height">120sp</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--카테고리 쓰레기 이미지-->
    <style name="category_image">
        <item name="android:layout_width">45sp</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--카테고리 쓰레기 이름-->
    <style name="category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <!--하단 툴바 아이콘-->
    <style name="toolbar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--뒤로 가기 버튼-->
    <style name="back_icon">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <!--상단 툴바 페이지 이름-->
    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--회원 정보 입력창-->
    <style name="editText_style">
        <item name="android:layout_width">350sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:background">@drawable/border_category</item>
    </style>

    <!--아이디, 닉네임 중복 확인 입력창-->
    <style name="editText_check_style">
        <item name="android:layout_width">250sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:background">@drawable/border_category</item>
    </style>

    <!--회원 정보 입력창을 나타내는 텍스트-->
    <style name="textView_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">30sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <!--버튼-->
    <style name="button_style">
        <item name="android:layout_width">350sp</item>
        <item name="android:layout_height">65sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/main_color_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">50sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>