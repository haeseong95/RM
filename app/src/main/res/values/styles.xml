<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--카테고리 버튼 레이아웃-->
    <style name="category_layout">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--카테고리 쓰레기 이미지-->
    <style name="category_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--카테고리 쓰레기 이름-->
    <style name="category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/nanum_regular</item>
    </style>

    <!--하단 툴바 아이콘-->
    <style name="toolbar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10dp</item>
    </style>

    <!--뒤로 가기 버튼-->
    <style name="back_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--상단 툴바 페이지 이름-->
    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/nanum_bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--회원 정보 입력창-->
    <style name="editText_style">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:background">@drawable/border_category</item>
    </style>

    <!--아이디, 닉네임 중복 확인 입력창-->
    <style name="editText_check_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/border_category</item>
    </style>

    <!--회원 정보 입력창을 나타내는 텍스트-->
    <style name="textView_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">45sp</item>
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--회원가입 정보 나타냄-->
    <style name="textView_check_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--버튼-->
    <style name="button_style">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/main_color_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/nanum_regular</item>
    </style>

    <!-- 커뮤니티 글쓰기 작성 확인/취소 버튼-->
    <style name="button_community_edit">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/main_color_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/nanum_regular</item>
    </style>

    <!--마이페이지 버튼-->
    <style name="mypage_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="fontFamily">@font/nanum_regular</item>
    </style>

    <!--커뮤니티 텍스트 굵은 글씨-->
    <style name="community_text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--커뮤니티 텍스트 일반 굵기-->
    <style name="community_text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/nanum_regular</item>>
    </style>

    <!--커뮤니티 텍스트 일반 굵기 + 젤 작은 사이즈인 등급,날짜에 회색 색깔-->
    <style name="community_text_normal_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#585858</item>
        <item name="fontFamily">@font/nanum_regular</item>>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonPositive</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonNeutral</item>
    </style>

    <!-- Style for Positive Button -->
    <style name="AlertDialogButtonPositive">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for Neutral Button -->
    <style name="AlertDialogButtonNeutral">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>