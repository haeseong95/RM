<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main_color_green"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="Recycle Mate"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="25dp"
            android:fontFamily="@font/nanum_regular"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/main_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/main_alarm"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/li_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/border_camera">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/nanum_regular"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:paddingRight="100dp"
                android:text="검색어를 입력하세요"
                android:textColor="#A0A0A0"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/search_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_camera"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/main_camera"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--1열-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/btn_can"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_can" style="@style/category_image"/>
                        <TextView android:text="고철" style="@style/category_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_glass" style="@style/category_layout" android:background="@drawable/border_category_btn">
                        <ImageView style="@style/category_image" android:src="@drawable/cat_glass" />
                        <TextView style="@style/category_text" android:text="유리" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_battery"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_battery" style="@style/category_image" android:padding="5dp"/>
                        <TextView android:text="생활유혜폐기물" style="@style/category_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_plastic_bag"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_plastic_bag" style="@style/category_image" android:padding="5dp"/>
                        <TextView android:text="비닐류" style="@style/category_text"/>
                    </LinearLayout>
                </LinearLayout>

                <!--2열-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/btn_paper"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_paper" style="@style/category_image" android:padding="10dp"/>
                        <TextView android:text="종이" style="@style/category_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_plastic"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_plastic" style="@style/category_image"/>
                        <TextView android:text="플라스틱" style="@style/category_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_sofa"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_sofa" style="@style/category_image"/>
                        <TextView android:text="대형폐기물" style="@style/category_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_res"
                        android:background="@drawable/border_category_btn" style="@style/category_layout">
                        <ImageView android:src="@drawable/cat_res" style="@style/category_image"/>
                        <TextView android:text="폐가전제품" style="@style/category_text"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/main_map"
                style="@style/toolbar_icon"
                android:drawableTop="@drawable/main_map"
                android:fontFamily="@font/nanum_regular"
                android:text="분리수거장" />

            <Button
                android:id="@+id/main_community"
                style="@style/toolbar_icon"
                android:fontFamily="@font/nanum_regular"
                android:drawableTop="@drawable/main_community"
                android:text="커뮤니티" />

            <Button
                android:id="@+id/main_userinfo"
                style="@style/toolbar_icon"
                android:fontFamily="@font/nanum_regular"
                android:drawableTop="@drawable/main_profile"
                android:text="로그인" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>