<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginUser">

    <!-- 툴바 : 백스페이스_toolBar, 페이지 타이틀-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        app:contentInsetStart="0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@drawable/left_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:id="@+id/login_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="관리자"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="사용자"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/login_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:hint="아이디 입력"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/text_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:hint="비밀번호 입력"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/text_border"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="로그인"
        android:textColor="@color/white"
        android:backgroundTint="#5DB075"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">


        <Button
            android:id="@+id/btn_search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="아이디 찾기"
            android:textColor="#4C4C4C"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_search_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="비밀번호 찾기"
            android:textColor="#4C4C4C"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#5DB075"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"/>


</LinearLayout>