<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mypage">

    <!--툴바-->
    <androidx.appcompat.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/left_button" style="@style/back_icon"/>

        <TextView android:id="@+id/category_title" android:text="마이페이지" style="@style/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mypage_user"/>

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:fontFamily="@font/g_regular"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등급"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/g_light"
            android:textSize="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="430dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/category_gray"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:id="@+id/li_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="내 정보 설정"
            style="@style/mypage_button"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mypage_button"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_community"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="게시글/댓글 관리하기"
            style="@style/mypage_button"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mypage_button"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="탈퇴하기"
            style="@style/mypage_button"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mypage_button"/>
    </LinearLayout>

    <!--로그아웃-->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:fontFamily="@font/nanum_regular"
        android:text="로그아웃"
        android:textAlignment="center"
        android:textColor="#858585"
        android:textSize="20dp" />

</LinearLayout>