<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp">

    <!--툴바-->
    <androidx.appcompat.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="130dp">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/btn_left" style="@style/back_icon"/>

        <TextView android:text="회원가입" style="@style/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>

    <!--회원가입 입력창-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!--닉네임-->
        <TextView android:text="닉네임" style="@style/textView_title_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sign_name"
                android:hint="닉네임" style="@style/editText_check_style"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BFBFBF"
                android:text="확인"
                android:fontFamily="@font/nanum_regular"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <!--아이디-->
        <TextView android:text="아이디" style="@style/textView_title_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sign_id"
                android:hint="아이디" style="@style/editText_check_style"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BFBFBF"
                android:fontFamily="@font/nanum_regular"
                android:text="확인"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <!--비밀번호-->
        <TextView android:text="비밀번호" style="@style/textView_title_style"/>

        <EditText
            android:id="@+id/sign_pwd"
            android:hint="비밀번호" style="@style/editText_style"
            android:inputType="textPassword"/>

        <!--이메일-->
        <TextView android:text="이메일" style="@style/textView_title_style"/>

        <EditText
            android:id="@+id/sign_email"
            android:hint="이메일" style="@style/editText_style"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <!--회원가입 버튼-->
    <Button
        android:id="@+id/btn_sign_up"
        style="@style/button_style"
        android:text="회원가입" />
</LinearLayout>