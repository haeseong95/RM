<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginUser">

    <!-- 툴바 : 백스페이스_toolBar, 페이지 타이틀-->
    <androidx.appcompat.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/btn_left" style="@style/back_icon"/>

        <TextView android:text="로그인" style="@style/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="200dp">

        <!--아이디-->
        <TextView android:text="아이디" style="@style/textView_title_style"/>

        <EditText
            android:id="@+id/login_id"
            android:hint="아이디" style="@style/editText_style"
            android:inputType="text"/>

        <!--비밀번호-->
        <TextView
            style="@style/textView_title_style"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/login_pwd"
            android:hint="비밀번호" style="@style/editText_style"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!--로그인 버튼-->
    <Button
        android:id="@+id/btn_login"
        android:text="로그인" style="@style/button_style" />

    <!--아이디/비번 찾기-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="아이디 찾기"
            android:textColor="#4C4C4C"
            android:fontFamily="@font/nanum_regular"
            android:textSize="18dp" />

        <Button
            android:id="@+id/search_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="비밀번호 찾기"
            android:fontFamily="@font/nanum_regular"
            android:textColor="#4C4C4C"
            android:textSize="18dp" />
    </LinearLayout>

    <!--회원가입-->
    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:text="회원가입"
        android:fontFamily="@font/nanum_regular"
        android:textColor="@color/main_color_green"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_gravity="center"/>
</LinearLayout>