<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".community.CommunityContent">

    <!--툴바-->
    <androidx.appcompat.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/btn_left" style="@style/back_icon"/>

        <TextView android:id="@+id/category_title" android:text="게시판" style="@style/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cc_images"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/category_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/cc_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanum_regular"
                    android:layout_alignParentStart="true"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/cc_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등급"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanum_regular"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/cc_nickname"
                    android:layout_alignBottom="@id/cc_nickname"
                    android:textSize="13sp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/cc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생성날짜"
                    android:textColor="#000000"
                    android:layout_alignBottom="@id/cc_nickname"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="13sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/cc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시글 제목"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/cc_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시글 내용"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/cc_thumbs"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/community_thumbs"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="35dp"/>

                <TextView
                    android:id="@+id/cc_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개수"
                    android:textColor="#000000"
                    android:fontFamily="@font/nanum_regular"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/cc_thumbs"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/category_gray"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/cc_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/cc_edit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="댓글을 입력하세요"
        android:padding="12dp"
        android:background="@drawable/border_edit_community"
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="@font/nanum_regular"
        android:layout_gravity="center"/>

</LinearLayout>