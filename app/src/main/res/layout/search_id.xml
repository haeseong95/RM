<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchId">

    <!--툴바-->
    <androidx.appcompat.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@android:color/transparent">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/btn_left" style="@style/back_icon"/>

        <TextView android:text="아이디 찾기" style="@style/toolbar_text" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edit_email"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:hint="이메일을 입력하세요" style="@style/editText_style"/>

    <Button
        android:id="@+id/btn_search_id"
        android:text="아이디 찾기" style="@style/button_style"/>

    <LinearLayout
        android:id="@+id/li_io"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#E2E2E2"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_marginTop="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색 결과 아이디는 아래와 같습니다."
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/g_regular"/>

        <TextView
            android:id="@+id/find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="아이디"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/g_regular"
            android:layout_marginBottom="50dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_to"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1.8"
            android:layout_gravity="bottom"
            android:background="#ced4da">

            <Button
                android:id="@+id/start_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1.8"
                android:text="로그인"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="#4C4C4C"
                android:fontFamily="@font/g_regular"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@color/main_color_green">

            <Button
                android:id="@+id/search_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:text="비밀번호 찾기"
                android:textStyle="bold"
                android:fontFamily="@font/g_regular"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>