<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/ccc_nickname"
                style="@style/community_text_bold"
                android:text="닉네임"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/community_large_text"
                android:layout_marginRight="10dp"/>


            <TextView
                android:id="@+id/ccc_level"
                style="@style/community_text_normal"
                android:textSize="@dimen/community_small_text"
                android:text="등급"
                android:layout_toEndOf="@id/ccc_nickname"
                android:layout_alignBottom="@id/ccc_nickname"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/ccc_date"
                style="@style/community_text_normal"
                android:text="생성날짜"
                android:textSize="@dimen/community_small_text"
                android:layout_alignBottom="@id/ccc_nickname"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/ccc_commen"
            style="@style/community_text_normal"
            android:text="댓글"
            android:textSize="@dimen/community_large_text"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>